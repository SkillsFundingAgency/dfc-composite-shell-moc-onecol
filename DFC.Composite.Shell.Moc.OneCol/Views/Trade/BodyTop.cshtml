@model BodyTopViewModel

@{
    ViewData["Title"] = "BodyTop";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <div class="govuk-tabs" data-module="tabs">
            <h2 class="govuk-tabs__title">
                Trades
            </h2>

            <ul class="govuk-tabs__list">
                <li class="govuk-tabs__list-item">
                    <a class="govuk-tabs__tab" asp-area="" asp-controller="Trade" asp-action="Index" asp-route-filter="All">
                        All Trades
                    </a>
                </li>
                <li class="govuk-tabs__list-item">
                    <a class="govuk-tabs__tab" asp-area="" asp-controller="Trade" asp-action="Index" asp-route-filter="ThisMonth">
                        This Month
                    </a>
                </li>
                <li class="govuk-tabs__list-item">
                    <a class="govuk-tabs__tab" asp-area="" asp-controller="Trade" asp-action="Index" asp-route-filter="NextMonth">
                        Next Month
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
